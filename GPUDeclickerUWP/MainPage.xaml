<Page
    x:Class="GPUDeclickerUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GPUDeclickerUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    SizeChanged="PageSizeChangedEventHandler">

    <Grid
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="15*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="12*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="0" Stretch="Fill">
                    <Button Click="GoLeftBigStep_Click" Content="&lt;&lt;" />
                </Viewbox>
                <Viewbox Grid.Row="1" Stretch="Fill">
                    <Button Click="GoLeftSmallStep_Click" Content="&lt;" />
                </Viewbox>
            </Grid>

            <local:AudioViewer Grid.Column="1"
                               x:Name="AudioViewer" />

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="0" Stretch="Fill">
                    <Button Click="GoRightBigStep_Click" Content="&gt;&gt;" />
                </Viewbox>
                <Viewbox Grid.Row="1" Stretch="Fill">
                    <Button Click="GoRightSmallStep_Click" Content="&gt;" />
                </Viewbox>
            </Grid>
            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="0" Stretch="Fill">
                    <Button Content="Mag+" Click="MagnifyMore_Click" />
                </Viewbox>
                <Viewbox Grid.Row="1" Stretch="Fill">
                    <Button Content="Mag-" Click="MagnifyLess_Click" />
                </Viewbox>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    Name="OpenButton"
                    Content="Open"
                    Click="OpenAudioFile_ClickAsync"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center" />
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Text="Detection level"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left" />
                <Slider Grid.Row="1"
                        Name="ThresholdSlider"
                        Value="10"
                        Minimum="1"
                        Maximum="50"
                        StepFrequency="0.1"
                        SmallChange="0.1"
                        VerticalAlignment="Bottom" />
                <TextBlock Grid.Row="0"
                           Text="{Binding ElementName=ThresholdSlider,
                        Path=Value, 
                        Mode=TwoWay}"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Right" />
            </Grid>
            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           Text="Max length"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left" />
                <Slider Grid.Row="1"
                        Name="MaxLengthSlider"
                        Value="250"
                        Minimum="1"
                        Maximum="500"
                        StepFrequency="1"
                        SmallChange="1"
                        VerticalAlignment="Bottom" />
                <TextBlock Grid.Row="0"
                           Text="{Binding ElementName=MaxLengthSlider, 
                    Path=Value}"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Right" />
            </Grid>
            <Button Grid.Column="4"
                    Name="ScanButton"
                    Content="Scan"
                    Click="Scan_ClickAsync"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    IsEnabled="False" />
            <Button Grid.Column="5"
                    Name="SaveButton"
                    Content="Save"
                    Click="SaveAudioFile_ClickAsync"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    IsEnabled="False" />
            <Button Grid.Column="6"
                    Content="About"
                    Click="AboutDialog_ClickAsync"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center" />
            <!--<Button Grid.Column="4" 
                    Name="SaveClicksButton"
                    Content="Save Clicks" 
                    Click="SaveClicks_Click" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    IsEnabled="True"/> -->
        </Grid>
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid Name="ClickWindowsGrid" />
        </ScrollViewer>
        <Grid Grid.Row="3" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Name="Status" HorizontalAlignment="Left" />
            <ProgressBar Grid.Column="1" Name="ProgressBar" Value="0" Maximum="100" Width="Auto"
                         HorizontalAlignment="Stretch" />
        </Grid>
    </Grid>
</Page>